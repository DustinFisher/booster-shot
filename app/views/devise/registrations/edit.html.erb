<div class="max-w-2xl">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
<div class="flex flex-col max-w-2xl rounded overflow-hidden bg-gray-200">
  <div class="container flex-1 flex flex-col justify-start p-4">
    <div class="text-black w-full">
      <h2 class="mb-4 text-xl">Account Details</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="mb-1">
          Email
        </div>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "Email", class: 'block border border-gray-300 w-full p-3 rounded mb-4' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-1">
          Change Password <i>(leave blank if you don't want to change it)</i>
        </div>
        <div class="flex flex-wrap -mx-3 items-center">
          <div class="w-full md:w-1/2 px-3">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password", class: 'w-full block border border-gray-300 p-3 rounded mb-1' %>
          </div>
          <div class="w-full md:w-1/2 px-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "New Password Confirmation", class: 'w-full block border border-gray-300 p-3 rounded mb-1' %>
          </div>
        </div>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>

        <div class="field mt-6">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current Password", class: 'block border border-gray-300 w-full p-3 rounded mb-4' %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: 'w-48 text-center py-3 rounded-md bg-green-500 text-white cursor-pointer hover:bg-green-600 focus:outline-none my-1' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="flex flex-col max-w-2xl rounded overflow-hidden bg-gray-200 mt-4">
  <div class="container flex-1 flex flex-col justify-start p-4">
    <div class="text-black w-full">
      <h2 class="mb-4 text-xl">Delete Account</h2>
      <div class="text-base">
        Caution! All your data will be removed upon deletion.
      </div>
      <div class="flex flex-wrap -mx-3 mt-2 items-center">
        <div class="w-full px-3">
          <%= button_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: 'w-48 text-center py-3 rounded-md bg-red-500 text-white cursor-pointer hover:bg-red-600 focus:outline-none my-1', method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>
